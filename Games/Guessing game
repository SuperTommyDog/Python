import random

secret_number = random.randint(0, 10)
guess_count = 0
guess_limit = 2
guess_warning = 2

while guess_count <= guess_limit:
    guess = int(input('Guess: '))
    print(f"{guess_warning} turns left!")
    guess_count += 1
    guess_warning -= 1
    if guess == secret_number:
        print('You Win! :D')
        break
else:
    print('Sorry, you failed!')
